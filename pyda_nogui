import wolframalpha
import wikipedia
from tkinter import *


app_id = "_________"
client = wolframalpha.Client(app_id)

root = Tk()
qholder = Entry(root)
qholder.pack(side=RIGHT)


def recieveQuery():
    query = qholder.get()

    try:
        res = client.query(query)
        answer = next(res.results).text
        print(answer)
    except:
        answer = wikipedia.summary(query)
        print(answer)

    theanswer = Label(root, text=answer)
    theanswer.pack(side=BOTTOM)

askq = Label(root, text="What is your inquiry? ")
askq.pack(side=LEFT)

submitbutton = Button(root, text="Submit Query", command=recieveQuery)
submitbutton.pack(side=BOTTOM)

root.mainloop()
